<Page x:Class="MietRechner.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MietRechner"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="200"
      Title="ErrorPage">

    <DockPanel LastChildFill="True" Margin="10,10,10,0">
        <Image Source="Images/Error.png" Height="32" VerticalAlignment="Top" />
        <TextBlock x:Name="MessageLabel" Foreground="#FFC0392B" VerticalAlignment="Center" TextWrapping="Wrap" Margin="6,0,0,0"/>
    </DockPanel>
</Page>
