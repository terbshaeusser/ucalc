<Page x:Class="MietRechner.CostEntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MietRechner"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="300"
      Title="CostEntryPage" Loaded="Page_Loaded">

    <DockPanel LastChildFill="True">
        <DockPanel x:Name="DeletePanel" DockPanel.Dock="Right" Width="32" LastChildFill="True" MouseEnter="DeletePanel_MouseEnter" MouseLeave="DeletePanel_MouseLeave" MouseLeftButtonUp="DeletePanel_MouseLeftButtonUp">
            <Image x:Name="DeleteImage" Source="Images/Delete.png"/>
        </DockPanel>
        <DockPanel x:Name="EntryPanel" DockPanel.Dock="Left" LastChildFill="True" MouseEnter="EntryPanel_MouseEnter" MouseLeave="EntryPanel_MouseLeave" MouseLeftButtonUp="EntryPanel_MouseLeftButtonUp">
            <Image x:Name="EntryImage" Source="Images/Costs_over.png" Margin="6" Width="40" DockPanel.Dock="Left"/>
            <Label x:Name="EntryLabel" Content="Some text" Foreground="#FF007ACC" VerticalContentAlignment="Center"/>
        </DockPanel>
    </DockPanel>
</Page>
